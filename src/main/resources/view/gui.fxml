<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="531.0" prefWidth="992.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GUI">
   <MenuBar prefHeight="15.0" prefWidth="564.0">
     <menus>
       <Menu mnemonicParsing="false" text="Menu">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#onAddBookClick" text="Dodaj książkę" />
             <MenuItem mnemonicParsing="false" onAction="#onAddUserClick" text="Dodaj osobę" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <GridPane alignment="BASELINE_CENTER" prefWidth="529.0">
     <columnConstraints>
       <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="462.0" minWidth="10.0" prefWidth="462.0" />
       <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="277.0" minWidth="10.0" prefWidth="102.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label prefHeight="35.0" prefWidth="305.0" text="Biblioteka">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
            <padding>
               <Insets left="100.0" />
            </padding>
            <effect>
               <Bloom />
            </effect>
         </Label>
         <Button mnemonicParsing="false" onAction="#onAddBookClick" text="Dodaj książkę" GridPane.columnIndex="1" />
         <Button mnemonicParsing="false" onAction="#onAddUserClick" prefWidth="90.0" text="Dodaj osobę" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <DialogPane fx:id="messagePanel" prefHeight="40.0" prefWidth="462.0" GridPane.rowIndex="2" />
      </children>
   </GridPane>
   <TabPane prefHeight="384.0" prefWidth="564.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Książki">
            <content>
               <TableView fx:id="booksTable" onMouseClicked="#onBookClick">
                 <columns>
                   <TableColumn fx:id="id" prefWidth="39.0" text="L.p." />
                   <TableColumn fx:id="title" prefWidth="123.0" text="Tytuł" />
                     <TableColumn fx:id="author" prefWidth="102.0" text="Autor" />
                     <TableColumn fx:id="category" prefWidth="102.0" text="Kategoria" />
                     <TableColumn fx:id="accessible" prefWidth="102.0" text="Dostępność" />
                     <TableColumn fx:id="borrowed" minWidth="9.0"  text="Wypożyczył" />
                 </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
            </content></Tab>
       <Tab text="Osoby">
            <content>
               <TableView prefHeight="200.0" prefWidth="200.0">
                  <columns>
                     <TableColumn prefWidth="39.0" text="L.p." />
                     <TableColumn prefWidth="162.0" text="Imię" />
                     <TableColumn prefWidth="148.0" text="Nazwisko" />
                     <TableColumn prefWidth="116.0" text="Rok urodzenia" />
                     <TableColumn minWidth="9.0" prefWidth="99.0" text="Liczba książek" />
                  </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
            </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
